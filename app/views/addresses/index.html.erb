<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>State</th>
      <th>Colony</th>
      <th>Number</th>
      <th>Insidenumber</th>
      <th>Zipcode</th>
      <th>Idproperty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.colony %></td>
        <td><%= address.number %></td>
        <td><%= address.insideNumber %></td>
        <td><%= address.zipCode %></td>
        <td><%= address.idProperty %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

